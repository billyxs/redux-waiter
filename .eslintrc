{
  "parser": "babel-eslint",
  "extends": [
    "plugin:flowtype/recommended",
    "airbnb"
  ],
  "env": {
    "node": true,
    "mocha": true
  },

  "plugins": [
    "standard",
    "promise",
    "flowtype"
  ],

  "rules": {
    "react/jsx-filename-extension": 0,
    "react/no-multi-comp": 0,
    "react/forbid-prop-types": 0,
    "semi" : [2, "never"]
  }
}
